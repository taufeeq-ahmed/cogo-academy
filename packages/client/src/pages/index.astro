---
import Dashboard from "../components/Dashboard.astro";
import Header from "../components/Header.astro";
import Layout from "../layouts/Layout.astro";

const response = await fetch(
  `${import.meta.env.PUBLIC_SERVER_URL}/course/list`
);
const courses = await response.json() || [];
---
<Layout title="Home - Dashboard" selected={"/"} courses={courses}>
    <Header slot="header" text="Welcome Back, Shivom!"/>
    <Dashboard rank={12} points={3534} />
</Layout>