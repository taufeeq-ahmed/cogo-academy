---
import AuthLayout from "../layouts/AuthLayout.astro";
---

<AuthLayout>
    <div class="container">
        <div class="heading">
            <p>Reset your password</p>
        </div>
        <div class="sub_heading">
            <p>
                Enter your email for the verification process,<br />
                we will send 4 digit code to your email
            </p>
        </div>
        <div class="section">
            <label for="">Email</label>
            <input type="email" class="email" placeholder="XXXXXXXXXXXXX" />
        </div>
        <div>
            <button class="sendcode_btn"> Send Code</button>
        </div>
        <div class="bottom">
            <span>Don't want to reset password? </span><a href="/signin">Log In</a>
        </div>
    </div>
</AuthLayout>
<style>
    .container {
        display: flex;
        flex-direction: column;
        align-items: center;
        height: 100vh;
        margin-top: 36px;
    }

    .heading {
        width: auto;
        height: 27px;
        font-weight: 700;
        font-size: 22px;
        display: flex;
        justify-content: center;
        margin-bottom: 16px;
        color: #212121;
    }

    .sub_heading {
        width: auto;
        height: 19px;
        font-weight: 400;
        font-size: 16px;
        line-height: 19px;
        display: flex;
        justify-content: center;
        color: #757575;
        margin-bottom: 36px;
    }

    .section {
        margin-bottom: 36px;
        margin-top: 36px;
    }

    label {
        width: 41px;
        height: 24px;
        font-weight: 400;
        font-size: 16px;
        line-height: 150%;
        margin-top: 36px;
        margin-bottom: 6px;
        color: #4f4f4f;
    }

    .email {
        box-sizing: border-box;
        display: flex;
        flex-direction: row;
        align-items: center;
        padding: 0px 4px 0px 8px;
        gap: 2px;
        width: 416px;
        height: 40px;
        background: #ffffff;
        border: 1px solid #e0e0e0;
        border-radius: 6px;
        margin-top: 6px;
    }

    .sendcode_btn {
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center;
        padding: 8px 16px;
        gap: 4px;
        width: 416px;
        height: 40px;
        background-color: #ee3425;
        border-radius: 6px;
        color: white;
        border: none;
        margin-bottom: 12px;
        margin-top: 36px;
        cursor: pointer;
    }

    a {
        width: 35px;
        height: 18px;
        font-weight: 500;
        font-size: 12px;
        line-height: 150%;
        text-decoration-line: underline;
        text-transform: capitalize;
        color: #757575;
    }
    .bottom{
        width:416px;
    }
    .bottom span {
        width: 202px;
        height: 17px;
        font-weight: 400;
        font-size: 14px;
        line-height: 17px;
        color: #757575;
    }
</style>
