---
import AuthLayout from "../layouts/AuthLayout.astro";
import eye from "../assets/eye.svg";
---

<AuthLayout>
    <div class="signin_container">
        <div class="heading">
            <p>Welcome Back!</p>
        </div>
        <div class="sub_heading">
            <p>Please enter your details</p>
        </div>
        <form action="http://0.0.0.0:8080/users/sign-in" method="post">
            <div>
                <div class="section">
                    <label for="">Email</label>
                    <input type="email" class="email" placeholder="Enter your email" required/>
                </div>
                <div class="section">
                    <label for="">Password</label>
                    <div class="password_input">
                        <input
                            class="password"
                            type="password"
                            id="password"
                            placeholder="Enter your password"
                        />
                        <button id="toggle_eye" class="toggle_password"
                            ><img
                                src={eye}
                                alt="Toggle Password Visibility"
                            /></button
                        >
                    </div>
                </div>
                <div class="forgot_link"><a href="/forgotpassword"> Forgot Password?</a></div>
                <div class="btn">
                    <button type="submit" class="submit">Login</button>
                </div>
                <div class="bottom">
                    <span>Don't have an account? </span><a href="/signup">Register Now</a>
                </div>
            </div>
        </form>
    </div>
</AuthLayout>
<script>
</script>
<script>
    function togglePasswordVisibility(e) {
        e.preventDefault();
        const passwordInput = document.querySelector("#password");
        const toggleButton = document.querySelector("#toggle_eye");
        const isPasswordVisible = passwordInput.type === "text";
        console.log(toggleButton);

        if (isPasswordVisible) {
            passwordInput.type = "password";
            // toggleButton.innerHTML =
            //     '<img src="eye.svg" alt="Show Password" />';
        } else {
            passwordInput.type = "text";
            // toggleButton.innerHTML = "Hide";
        }
    }
    document
        .getElementById("toggle_eye")
        .addEventListener("click", togglePasswordVisibility);
</script>
<style>
    /* AuthLayout styles */
    .signin_container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 60vh;
        margin-top: auto;
    }

    .heading {
        width: 165px;
        height: 27px;
        font-weight: 700;
        font-size: 22px;
        display: flex;
        justify-content: center;
        margin-bottom: 8px;
        color: #212121;
    }

    .sub_heading {
        width: 187px;
        height: 19px;
        font-weight: 400;
        font-size: 16px;
        line-height: 19px;
        display: flex;
        justify-content: center;
        color: #757575;
        margin-bottom: 36px;
    }

    .form {
        display: flex;
        flex-direction: column;
        justify-content: center;
        width: 100%;
        max-width: 400px;
    }

    .section {
        display: flex;
        flex-direction: column;
        width: 100%;
        margin-bottom: 16px;
    }
    .forgot_link {
        width: 100%;
        display: flex;
        justify-content: flex-end;
    }
    label {
        font-weight: 400;
        font-size: 16px;
        line-height: 150%;
        display: flex;
        align-items: center;
        color: #4f4f4f;
    }
    .password_input {
        display: flex;
        flex-direction: row;
        align-items: center;
        padding: 0px 4px 0px 8px;
        gap: 2px;
        width: 100%;
        height: 40px;
        background: #ffffff;
        border: 1px solid #e0e0e0;
        border-radius: 6px;
    }
    .password {
        border: none;
        width: 100%;
        outline: none;
    }
    .email {
        /* box-sizing: border-box; */
        display: flex;
        flex-direction: row;
        align-items: center;
        padding: 0px 4px 0px 8px;
        gap: 2px;
        width: 100%;
        height: 40px;
        background: #ffffff;
        border: 1px solid #e0e0e0;
        border-radius: 6px;
    }

    .password:focus + svg {
        fill: #ee3425;
    }

    .eye-icon {
        width: 20px;
        height: 20px;
        fill: #757575;
    }
    a {
        width: 102px;
        height: 18px;
        font-weight: 400;
        font-size: 12px;
        /* justify-content: right; */
        text-decoration-line: underline;
        color: #757575;
        cursor:pointer;
    }
    button{
        cursor: pointer;
    }
    .btn {
        display: flex;
        justify-content: center;
        margin-top: 24px;
        width: 100%;
    }
    .toggle_password {
        background-color: white;
        border: none;
    }
    .submit {
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center;
        padding: 8px 16px;
        gap: 4px;
        width: 416px;
        height: 40px;
        background: #ee3425;
        border-radius: 6px;
        color: white;
        border: none;
    }

    .bottom span {
        width: 155px;
        height: 17px;
        font-weight: 400;
        font-size: 12px;
        line-height: 40px;
        color: #757575;
    }
    .bottom {
        width: 100%;
        margin-top: 12px;
    }
    @media (max-width: 768px) {
        .signin_container {
            height: auto;
        }

        .heading {
            font-size: 18px;
            width: 100%;
            text-align: center;
            margin-bottom: 16px;
        }

        .sub_heading {
            font-size: 14px;
            width: 100%;
            text-align: center;
        }

        input[type="email"],
        .password {
            height: 32px;
        }

        .btn button[type="submit"] {
            width: 100%;
            max-width: 300px;
        }
    }
</style>
