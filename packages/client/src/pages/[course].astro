---
import CourseCards from "../components/CourseCards.astro";
import CourseTabs from "../components/CourseTabs.astro";
import Layout from "../layouts/Layout.astro";
const response = await fetch(
  `${import.meta.env.PUBLIC_SERVER_URL}/courses/get-all-courses`
);
const courses = await response.json();

export async function getStaticPaths() {

  const response = await fetch(
    `${import.meta.env.PUBLIC_SERVER_URL}/courses/get-all-courses`
  );
  const data = await response.json();

  const paths = [];
  data.forEach((course, i) => {
    paths.push({
      params: {
        course: course.id,
      },
      props: {
        idx: i,
      },
    });
  });

  return paths;
}

const { course } = Astro.params;
const { idx } = Astro.props;
---

<Layout title={`Course - ${course}`}>
  <CourseTabs slot="coursetabs" selected={idx} courses={courses} />
  <CourseCards course={course} />
</Layout>
