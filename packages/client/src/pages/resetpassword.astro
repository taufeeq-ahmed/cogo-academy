---
import AuthLayout from "../layouts/AuthLayout.astro";
import eye from "../assets/eye.svg";
---
<AuthLayout>
    <div class="container">
        <div class="heading">
            <p>Reset password</p>
        </div>
        <div class="sub_heading">
            <p>Enter your new password</p>
        </div>
        <div>
            <div class="section">
                <label for="password">Password</label>
                <div class="password_input">
                    <input
                        class="password"
                        type="password"
                        id="password"
                        placeholder="Enter your  new password"
                    />
                    <button id="toggle_eye" class="toggle_password"
                        ><img
                            src={eye}
                            alt="Toggle Password Visibility"
                        /></button
                    >
                </div>
            </div>
            <div class="section">
                <label for="confirm-password">Confirm Password</label>
                <div class="password_input">
                    <input
                        class="password"
                        type="password"
                        id="confirm_password"
                        placeholder="Confirm password"
                    />
                    <button id="confirm_toggle_eye" class="toggle_password"
                        ><img
                            src={eye}
                            alt="Toggle Password Visibility"
                        /></button
                    >
                </div>
            </div>
            <div class="btn">
                <button type="submit" class="submit">Reset password</button>
            </div>
            <div class="bottom">
                <span>Don't want to reset password? </span><a href="">Log In</a>
            </div>
        </div>
    </div>
</AuthLayout>
<script>
    function togglePasswordVisibility(e) {
        e.preventDefault();
        const passwordInput = document.querySelector("#password");
        const toggleButton = document.querySelector("#toggle_eye");
        const isPasswordVisible = passwordInput.type === "text";
        console.log(toggleButton);

        if (isPasswordVisible) {
            passwordInput.type = "password";
            // toggleButton.innerHTML =
            //     '<img src="eye.svg" alt="Show Password" />';
        } else {
            passwordInput.type = "text";
            // toggleButton.innerHTML = "Hide";
        }
    }
    document
        .getElementById("toggle_eye")
        .addEventListener("click", togglePasswordVisibility);
    function toggleConfirmPasswordVisibility(e) {
        e.preventDefault();
        const passwordInput = document.querySelector("#confirm_password");
        const toggleButton = document.querySelector("#confirm_toggle_eye");
        const isPasswordVisible = passwordInput.type === "text";
        console.log(toggleButton);

        if (isPasswordVisible) {
            passwordInput.type = "password";
            // toggleButton.innerHTML =
            //     '<img src="eye.svg" alt="Show Password" />';
        } else {
            passwordInput.type = "text";
            // toggleButton.innerHTML = "Hide";
        }
    }
    document
        .getElementById("confirm_toggle_eye")
        .addEventListener("click", toggleConfirmPasswordVisibility);
</script>
<style>
    .container{
        display: flex;
        flex-direction: column;
        align-items: center;
        height: auto;
        margin-top: auto;
    }
    .heading {
        width: auto;
        height: 27px;
        font-weight: 700;
        font-size: 22px;
        display: flex;
        align-items: center;
        margin-bottom: 8px;
        color: #212121;
    }

    .sub_heading {
        width: 187px;
        height: 19px;
        font-weight: 400;
        font-size: 16px;
        line-height: 19px;
        align-items: center;
        display: flex;
        color: #757575;
        margin-bottom: 36px;
        margin-top: 8px;
    }
    .form {
        display: flex;
        flex-direction: column;
        /* justify-content: center; */
        align-items: center;
        width: 100%;
        max-width: 400px;
    }
    .section {
        display: flex;
        flex-direction: column;
        width: 100%;
        margin-bottom: 16px;
    }
    button{
        cursor:pointer;
    }
    label {
        font-weight: 400;
        font-size: 16px;
        line-height: 150%;
        display: flex;
        align-items: center;
        color: #4f4f4f;
        margin-bottom: 6px;
        margin-top: 4px;
    }
    .password_input {
        display: flex;
        flex-direction: row;
        align-items: center;
        padding: 0px 4px 0px 8px;
        gap: 2px;
        width: 100%;
        height: 40px;
        background: #ffffff;
        border: 1px solid #e0e0e0;
        border-radius: 6px;
    }
    .password {
        border: none;
        width: 100%;
        outline: none;
    }
    .btn {
        display: flex;
        justify-content: center;
        margin-top: 24px;
        width: 100%;
        margin-top: 36px;
    }
    .toggle_password {
        background-color: white;
        border: none;
    }
    .submit {
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center;
        padding: 8px 16px;
        gap: 4px;
        width: 416px;
        height: 40px;
        background: #ee3425;
        border-radius: 6px;
        color: white;
        border: none;
        margin-bottom: 12px;
    }
    a {
        width: 35px;
        height: 18px;
        font-weight: 500;
        font-size: 12px;
        line-height: 150%;
        text-decoration-line: underline;
        text-transform: capitalize;
        color: #757575;
    }
    .bottom span {
        width: 202px;
        height: 17px;
        font-weight: 400;
        font-size: 14px;
        line-height: 17px;
        color: #757575;
    }
</style>