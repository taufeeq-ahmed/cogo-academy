---
import Button from "../components/Button/Button";
import AuthLayout from "../layouts/AuthLayout.astro";
import eye from "../assets/eye.svg";
---

<AuthLayout>
    <div class="signup_container">
        <div class="heading"><p>Let's get started for free</p></div>
        <div class="subheading"><p>create your account in one step</p></div>
        <form action="/" class="fm">
            <div class="section">
                <label for="full-name">Full Name</label>
                <input
                    type="text"
                    class="text"
                    placeholder="Enter your Full Name"
                    required
                />
            </div>
            <div class="section">
                <label for="email">Email</label>
                <input
                    type="email"
                    class="email"
                    placeholder="Enter your Email "
                    required
                />
            </div>
            <div class="section">
                <label for="password">Password</label>
                <div class="password_input">
                    <input
                        class="password"
                        type="password"
                        id="password"
                        placeholder="Enter your password"
                    />
                    <button id="toggle_eye" class="toggle_password"
                        ><img
                            src={eye}
                            alt="Toggle Password Visibility"
                        /></button
                    >
                </div>
            </div>
            <div class="section">
                <label for="confirm-password">Confirm Password</label>
                <div class="password_input">
                    <input
                        class="password"
                        type="password"
                        id="password"
                        placeholder="Confirm password"
                    />
                    <button id="toggle_eye" class="toggle_password"
                        ><img
                            src={eye}
                            alt="Toggle Password Visibility"
                        /></button
                    >
                </div>
            </div>
            <div class="section">
                <label for="git-username">Git Username</label>
                <input
                    type="text"
                    class="text"
                    id="git-username"
                    placeholder="Enter your git username"
                />
            </div>
            <div class="section">
                <label for="batch">Batch</label>
                <select id="batch" class="select" name="batch">
                    <option value="batch-1">Batch 1</option>
                    <option value="batch-2">Batch 2</option>
                    <option value="batch-3">Batch 3</option>
                </select>
            </div>
            <div class="btn">
                <button type="submit">Create Account</button>
            </div>
            <div class="bottom">
                <span>already have an account? </span><a href="/signin">Log In</a>
            </div>
        </form>
    </div>
</AuthLayout>
<script>
    function togglePasswordVisibility(e) {
        e.preventDefault();
        const passwordInput = document.querySelector("#password");
        const toggleButton = document.querySelector("#toggle_eye");
        const isPasswordVisible = passwordInput.type === "text";
        console.log(toggleButton);

        if (isPasswordVisible) {
            passwordInput.type = "password";
        } else {
            passwordInput.type = "text";
        }
    }
    document
        .getElementById("toggle_eye")
        .addEventListener("click", togglePasswordVisibility);
</script>
<style>
    * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
    }

    body {
        font-family: Arial, sans-serif;
        font-size: 16px;
        line-height: 1.5;
    }

    .signup_container {
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .heading {
        font-weight: 700;
        font-size: 22px;
        line-height: 27px;
        display: flex;
        justify-content: center;
    }

    .subheading {
        font-weight: 400;
        font-size: 16px;
        line-height: 19px;
        display: flex;
        justify-content: center;
        align-items: center;

        /* COGO GREY */

        color: #757575;
        text-align: center;
        margin-bottom: 20px;
    }
    .fm {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    form .section {
        margin-bottom: 16px;
    }

    label {
        display: block;
        margin-bottom: 6px;
        font-weight: bold;
        font-weight: 400;
        font-size: 16px;
        line-height: 150%;
    }

    .email,
    .select,
    .text {
        display: flex;
        flex-direction: row;
        align-items: center;
        padding: 0px 4px 0px 8px;
        gap: 2px;
        width: 416px;
        height: 40px;
        border: 1px solid #e0e0e0;
        border-radius: 6px;
    }
    .password_input {
        display: flex;
        flex-direction: row;
        align-items: center;
        padding: 0px 4px 0px 8px;
        gap: 2px;
        width: 416px;
        height: 40px;
        border: 1px solid #e0e0e0;
        border-radius: 6px;
    }
    .password {
        border: none;
        width: 100%;
        outline: none;
    }
    .toggle_password {
        background-color: white;
        border: none;
    }
    .bottom{
        width: 416px;
    }
    .bottom span {
        width: 171px;
        height: 17px;
        font-weight: 400;
        font-size: 14px;
        line-height: 17px;
        color: #757575;
    }
    button[type="submit"] {
        color: white;
        padding: 8px 16px;
        gap: 4px;
        width: 416px;
        height: 40px;
        background: #ee3425;
        border-radius: 6px;
        border: none;
        cursor: pointer;
    }
    a {
        width: 102px;
        height: 18px;
        font-weight: 400;
        font-size: 12px;
        text-decoration-line: underline;
        color: #757575;
    }
    button{
        cursor:pointer;
    }
    button[type="submit"]:hover {
        background-color: rgb(199, 125, 125);
    }
</style>
