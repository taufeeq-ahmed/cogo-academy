---
import AuthLayout from "../layouts/AuthLayout.astro";
---

<AuthLayout>
    <div class="container">
        <div class="heading">
            <p>Reset your password</p>
        </div>
        <div class="sub_heading">
            <span class="sub_heading_span"
                >Enter your email for the verification process,<br />
                we will send 4 digit code to your email
            </span>
        </div>
        <div class="instruction">
            <span>Please enter the otp sent to the xyz@gmail.com</span>
            <a href="/" id="edit"> edit</a>
        </div>
        <div class="otp">
            <input type="text" id="ist" class="digit" maxlength="1" />
            <input type="text" id="sec" class="digit" maxlength="1" />
            <input type="text" id="third" class="digit" maxlength="1" />
            <input type="text" id="fourth" class="digit" maxlength="1" />
        </div>
        <div class="btn">
            <button type="submit" class="submit">Reset password</button>
        </div>
        <div class="bottom">
            <span>Don't want to reset password? </span><a href="">Log In</a>
        </div>
    </div>
</AuthLayout>
<style>
    .container {
        display: flex;
        flex-direction: column;
        align-items: center;
        height: auto;
        margin-top: 36px;
    }

    .heading {
        width: auto;
        height: 27px;
        font-weight: 700;
        font-size: 22px;
        display: flex;
        justify-content: center;
        margin-bottom: 16px;
        color: #212121;
    }

    .sub_heading_span {
        width: auto;
        height: 19px;
        font-weight: 400;
        font-size: 16px;
        line-height: 19px;
        display: flex;
        justify-content: center;
        color: #757575;
        margin-bottom: 36px;
        margin-top: 16px;
    }
    .instruction {
        margin-top: 36px;
        width: 338px;
        height: 19px;
        font-weight: 300;
        font-size: 16px;
        line-height: 19px;
        color: #828282;
        width: 402px;
    }
    .opt {
        display: flex;
        flex-direction: row;
        margin-top: 24px;
        width: 416px;
    }
    .digit {
        box-sizing: border-box;
        width: 98px;
        height: 50px;
        border: 1px solid #e0e0e0;
        border-radius: 4px;
        margin-top: 24px;
        
    }
    a {
        width: 35px;
        height: 18px;
        font-weight: 500;
        font-size: 13px;
        line-height: 150%;
        text-decoration-line: underline;
        text-transform: capitalize;
        color: #757575;
    }
    .btn {
        display: flex;
        justify-content: center;
        margin-top: 24px;
        width: 100%;
        margin-top: 36px;
    }
    .submit {
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center;
        padding: 8px 16px;
        gap: 4px;
        width: 416px;
        height: 40px;
        background: #ee3425;
        border-radius: 6px;
        color: white;
        border: none;
        margin-bottom: 12px;
    }
    .bottom{
        width: 416px;
    }
    .bottom span {
        width: 202px;
        height: 17px;
        font-weight: 400;
        font-size: 14px;
        line-height: 17px;
        color: #757575;
    }
</style>
