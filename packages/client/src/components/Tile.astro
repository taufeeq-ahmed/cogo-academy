---
const {user} = Astro.props
---
<div class="tile">
    <div class="prof_pic">
        <img src="https://source.unsplash.com/random" alt="">
    </div>
    <div class="prof_details">
        <h4>{user.user_name}</h4>
        <span>RANK {user.user_rank}</span>
    </div>
    <div class="score">
        {user.total_score}
    </div>
</div>

<style>
    .tile{
        display: flex;
        align-items: center;
        height: 80px;
        padding:10px 15px;
        gap: 16px;
        border-bottom: 1px solid var(--border-color);
    }
    .prof_pic > img{
		width: 36px;
		height: 36px;
		border-radius: 50%;
        cursor: pointer;
	}
    .prof_details{
        flex: 1;
        display: flex;
        flex-direction: column;
    }

    .prof_details > h4{
        cursor: pointer;
    }
</style>