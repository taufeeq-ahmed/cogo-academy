---
import ContentBody from "./ContentBody";
import LinkBtn from "./LinkBtn.astro";
import ArrowSVG from "/assets/arrow.svg";

const {course_content} = Astro.props
---

<div class="content-header">
    <LinkBtn
        btnStyle={{ padding: "7px 14px" }}
        iconStyle={{ transform: "rotate(-180deg)" }}
        icon={ArrowSVG}
        iconPlacement="left"
        text="Back to course"
        link="/"
    />
</div>
<ContentBody course_content={course_content} client:load />


<style>
    .content-body {
        height: 100vh;
        overflow: auto;
    }
    .content-footer {
        position: sticky;
        bottom: 0;
        left: 0;
        right: 0;
        display: flex;
        justify-content: flex-end;
        padding: 16px 24px 16px 24px;
        background-color: white;
        box-shadow: 0px 0px 4px rgba(98, 127, 172, 0.2);
    }
    .content-body,
    .content-header {
        padding: 24px 24px 0 24px;
    }
</style>
