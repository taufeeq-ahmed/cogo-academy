---
const {courses,selected} = Astro.props
import BrandLogo from "/assets/brand.svg"
import '../styles/global.css'
---

<div class="tabs">
  <div class="brand-logo">
    <img src={BrandLogo}  alt="brand-logo"/>
  </div>
  <a href="/" class={`tab ${selected === "/" ? "selected" : "not-selected"}`}>
    Home
  </a>
  {courses && courses.map((course: any, idx: any) => 
    <a href={`/${course.id}`} class={`tab ${selected === idx ? "selected" : "not-selected"}`}>
      {course.course_name}
    </a>)}
</div>

<style>
  .tabs{
    width: 16rem;
    display: flex;
    flex-direction: column;
    padding: 1.25rem 1rem 0px 1rem;
    box-shadow: 0px 0px 8px rgba(98, 127, 172, 0.2);
  }
  .brand-logo{
    margin-bottom: 1.5rem;
    padding: 0 1rem;
  }
  .tab{
    padding: 0.5rem 1.25rem 0.5rem 1.25rem;
    margin: 0.25rem 0;
    text-decoration: none;
    color: var(--font-color-tab);
    font-weight: 400;
    font-size: var(--font-size-lg);
  }
  .tab:hover{
    background-color: var(--color-primary);
  }
  .selected{
    background-color: var(--color-primary);
    font-weight: 500;
    color: var(--font-color);
  }
</style>