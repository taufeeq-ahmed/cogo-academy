---
import BrandLogo from "/assets/brand.svg";
import "../styles/global.css";
---

<div class="tabs" id="tabs">
  <div class="tabs-header">
    <div class="brand-logo">
      <a href="/"><img src={BrandLogo} alt="brand-logo" /></a>
    </div>
  </div>
  <slot class="all-tabs" />
</div>

<style>
  .tabs {
    width: 16rem;
    display: flex;
    flex-direction: column;
    padding: 1.25rem 1rem 0px 1rem;
    box-shadow: 0px 8px 8px rgba(98, 127, 172, 0.2);
    z-index: 10;
    background-color: white;
  }

  .tabs-header {
    display: flex;
  }
  .brand-logo {
    margin-bottom: 1.5rem;
  }

  @media (max-width: 768px) {
    .tabs {
      position: fixed;
      padding: 1rem 0.75rem 0px 0.75rem;
      height: 100vh;
      display: none;
    }
    .brand-logo {
      display: none;
    }
  }
  @media (768px<=width<=1400px) {
    .brand-logo img {
      width: 6rem;
    }
  }
</style>
<script>
  const openBtn = document.querySelector<HTMLElement>("#open-btn");
  const openContent = document.querySelector<HTMLElement>("#tabs");

  openBtn.addEventListener("click", () => {
    if (openContent.style.display === "flex") {
      openContent.style.display = "none";
    } else {
      openContent.style.display = "flex";
    }
  });
</script>
