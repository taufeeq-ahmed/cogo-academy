---
import LogoutSVG from "/assets/logout.svg"
const {text} = Astro.props
---

<div class="header">
    <div class="course_title">{text}</div>
    <div class="header_right">
		<slot/>
        <div class="profile-box">
            <div class="prof_pic">
                <img
                    src="https://source.unsplash.com/random"
                    alt="profile-pic"
                />
            </div>
            <div class="profile_details">
                <div class="profile_name">Shivom Mahar</div>
                <div class="profile_rank">Rank 12</div>
            </div>
            <div class="logout_box">
                <img src={LogoutSVG} alt="logout-icon" />
            </div>
        </div>
    </div>
</div>

<style>	.header {
		display: flex;
		justify-content: space-between;
		padding: 5px;
	}
	.header_right{
		display: flex;
		gap: 16px;
	}
	.course_title{
		font-weight: 500;
		font-size: 24px;
	}
	.profile-box{
		height: 40px;
		display: flex;
		align-items: center;
		gap: 5px;
	}
	.profile_details{
		display: flex;
		flex-direction: column;
	}
	.profile_rank{
		font-size: var(--font-size-md);
	}
	.prof_pic > img{
		width: 36px;
		height: 36px;
		border-radius: 50%;
        cursor: pointer;
	}
	.logout_box{
		cursor: pointer;
	}
	</style>
