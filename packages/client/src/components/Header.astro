---
import LogoutSVG from "/assets/logout.svg"
---

<div class="header">
    <div class="course_title">Courses</div>
    <div class="header_right">
        <div class="search-box">
            <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                aria-hidden="true"
                class="h-5 w-6 text-black"
                ><path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M21 21l-5.197-5.197m0 0A7.5 7.5 0 105.196 5.196a7.5 7.5 0 0010.607 10.607z"
                ></path></svg
            >
            <input
                class="search-input"
                type="text"
                name=""
                id=""
                placeholder="Search for Content"
            />
        </div>
        <div class="profile-box">
            <div class="prof_pic">
                <img
                    src="https://source.unsplash.com/random"
                    alt="profile-pic"
                />
            </div>
            <div class="profile_details">
                <div class="profile_name">Shivom Mahar</div>
                <div class="profile_rank">Rank 12</div>
            </div>
            <div class="logout_box">
                <img src={LogoutSVG} alt="logout-icon" />
            </div>
        </div>
    </div>
</div>

<style>	.header {
		display: flex;
		justify-content: space-between;
		padding: 5px;
	}
	.header_right{
		display: flex;
		gap: 16px;
	}
	.course_title{
		font-weight: 500;
		font-size: 24px;
	}
	.profile-box{
		height: 40px;
		display: flex;
		align-items: center;
		gap: 5px;
	}
	.profile_details{
		display: flex;
		flex-direction: column;
	}
	.profile_rank{
		font-size: var(--font-size-md);
	}
	.prof_pic > img{
		width: 36px;
		height: 36px;
		border-radius: 50%;
        cursor: pointer;
	}
	.logout_box{
		cursor: pointer;
	}
	.search-box {
		display: flex;
		align-items: center;
		gap: 10px;
		padding: 0 0.5rem;
		border: 1px solid var(--border-color);
		color: var(--border-color);
		border-radius: 0.375rem;
		width: 300px;
	}
	.search-box > svg {
		height: 1.25rem;
		padding-left: 0.25rem;
		color: #BDBDBD;
	}
	.search-input {
		flex: 1;
		outline: none;
		border: none;
		padding: 0.75rem 0;
	}</style>
