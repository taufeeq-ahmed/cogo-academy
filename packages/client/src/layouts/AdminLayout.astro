---
import TabsNav from "../components/TabsNav.astro";
import MainLayout from "./MainLayout.astro";
import home from "../../public/assets/home.svg"
import course from "../../public/assets/course.svg"
import profile from "../../public/assets/profileadmin.svg"
const { title } = Astro.props;
const currentPath = Astro.url.pathname;
---

<MainLayout title={title}>
    <TabsNav slot="tabs">
            <a
            href="/admin"
            class={`tab ${
                currentPath === "/admin" ? "tab_selected" : "not-selected"
            }`}
        >
        <img src={home}/> Home
        </a>
        <a
            href="/admin/courses"
            class={`tab ${
                currentPath === "/admin/courses"
                    ? "tab_selected"
                    : "not-selected"
            }`}
        >
        <img src={course}/> Courses
        </a>
        <a
            href="/admin/users"
            class={`tab ${
                currentPath === "/admin/users" ? "tab_selected" : "not-selected"
            }`}
        >
        <img src={profile}/> Students
        </a>
        <a
            href="/admin/batches"
            class={`tab ${
                currentPath === "/admin/batches"
                    ? "tab_selected"
                    : "not-selected"
            }`}
        >
        <img src={profile}/> Batches
        </a>
    </TabsNav>
    <slot />
</MainLayout>
<style>
    .home{
        display:flex;
        align-items: center;

    }
</style>