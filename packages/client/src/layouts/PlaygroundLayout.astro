        background-color: #fdfbf6;
        max-width: 55%;
    }
    .name-time > div:last-child {
        font-weight: 400;
        font-size: var(--font-size-sm);
        color: var(--color-secondary-2);
        display: flex;
        align-items: center;
        gap: 5px;
    }
    .left_title.right_box_title {
        color: var(--font-color);
        font-weight: 500;
    }
    .right_box {
        z-index: 10;
        flex: 1;
        display: flex;
